<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CFV.Multitool.UI.Views.CritPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Draw Critical Card For: " VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" TextColor="White"/>
            <Button x:Name="btnBlunt" Text="Bludgeoning!" Pressed="Blunt_Pressed"/>
            <Button x:Name="btnPierce" Text="Piercing!" Pressed="Pierce_Pressed"/>
            <Button x:Name="btnSlash" Text="Slashing!" Pressed="Slash_Pressed"/>
            <Button x:Name="btnMagic" Text="Magic!" Pressed="Magic_Pressed"/>
            <StackLayout Orientation="Vertical" Padding="20,20,20,20">
                <Label x:Name="lblName" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" TextColor="White"/>
                <Label x:Name="lblResult" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" TextColor="White"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>